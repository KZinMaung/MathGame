<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/normalModeLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".normal_mode"
    android:orientation="vertical"
    android:background="@color/normalmodecolor"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        >

        <ProgressBar
            android:id="@+id/time_left"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:max="20"
            android:minWidth="200dp"
            android:minHeight="20dip"
            android:progress="30"
            android:progressTint="#e9873c"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="400dp"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/question_left"
            android:layout_width="150dp"
            android:background="@drawable/setting"
            android:textColor="#e9873c"
            android:textSize="14dp"
            android:fontFamily="@font/answer1"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:id="@+id/score"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/setting"
            android:textColor="#e9873c"
            android:textSize="14dp"
            android:fontFamily="@font/answer1"
            android:layout_marginLeft="100dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/txt_operand1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:textSize="21dp"
            android:textColor="#e9873c"
            android:padding="5dp"
            android:paddingTop="2dp"
            android:fontFamily="@font/fff2"/>
        <TextView
            android:id="@+id/txt_operator"
            android:layout_marginLeft="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="21dp"
            android:textColor="#e9873c"
            android:paddingTop="2dp"
            android:padding="5dp"
            android:fontFamily="@font/fff2"/>
        <TextView
            android:id="@+id/txt_operand2"
            android:layout_marginLeft="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textSize="21dp"
            android:textColor="#e9873c"
            android:padding="5dp"
            android:paddingTop="2dp"
            android:fontFamily="@font/fff2"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:paddingVertical="1dp"
            android:text="="
            android:textSize="21dp"
            android:textColor="#e9873c"
            android:padding="17dp"
            android:fontFamily="@font/fff2"
            />
        <TextView
            android:id="@+id/txt_target"
            android:layout_marginLeft="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingVertical="2dp"
            android:textSize="21dp"
            android:textColor="#e9873c"
            android:padding="5dp"
            android:fontFamily="@font/fff2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp">
        <TextView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="130dp"
            android:layout_marginBottom="20dp"
            android:text="Answer=?"
            android:textColor="#e9873c"
            android:fontFamily="@font/answer1"
            android:textSize="28dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="0dp">
        <Button
            android:id="@+id/btn_ans1"
            android:layout_marginLeft="50dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#e9873c"
            android:textSize="24dp"
            android:fontFamily="@font/f1"
            android:background="@drawable/setting"/>
        <Button
            android:id="@+id/btn_ans2"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#e9873c"
            android:fontFamily="@font/f1"
            android:textSize="24dp"
            android:background="@drawable/setting"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_ans3"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#e9873c"
            android:textSize="24dp"
            android:fontFamily="@font/f1"
            android:background="@drawable/setting"/>
        <Button
            android:id="@+id/btn_ans4"
            android:layout_marginLeft="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textColor="#e9873c"
            android:fontFamily="@font/f1"
            android:textSize="24dp"
            android:background="@drawable/setting"/>
    </LinearLayout>
</LinearLayout>
