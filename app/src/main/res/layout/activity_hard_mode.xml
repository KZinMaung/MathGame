<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutForHardMode"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hard_mode"
    android:orientation="vertical"
    android:background="@color/normalmodecolor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        >

        <ProgressBar
            android:id="@+id/time_left"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:indeterminate="false"
            android:max="20"
            android:minWidth="200dp"
            android:minHeight="20dip"
            android:progress="30"
            android:progressTint="#e9873c"/>

    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="400dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/question_left"
                android:layout_width="150dp"
                android:background="@drawable/setting"
                android:textColor="#e9873c"
                android:textSize="14dp"
                android:fontFamily="@font/answer1"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/score"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/setting"
                android:textColor="#e9873c"
                android:textSize="14dp"
                android:fontFamily="@font/answer1"
                android:layout_marginLeft="100dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="34dp">
            <TextView
                android:layout_width="90dp"
                android:layout_height="60dp"
                android:layout_marginLeft="110dp"
                android:text="Target:"
                android:textSize="20dp"
                android:textColor="#f59d38"
                android:paddingLeft="18dp"
                android:paddingTop="8dp"

                />
            <TextView
                android:id="@+id/txt_target"
                android:layout_marginLeft="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:textSize="20dp"
                android:textColor="#f59d38"
                />


            />
        </LinearLayout>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="45dp">
            <Button
                android:id="@+id/btnGoPlus"
                android:text="+"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#f59d38"/>
            <Button
                android:id="@+id/btnGoMinus"
                android:text="-"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#f59d38"/>
            <Button
                android:id="@+id/btnGoMultiply"
                android:text="*"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#f59d38"/>
            <Button
                android:id="@+id/btnGoDivision"
                android:text="/"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#f59d38"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="80dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp">
        <TextView
            android:id="@+id/txtFirstOperand"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#f59d38"
            android:textSize="22dp"
            android:fontFamily="@font/fff2"/>
        <TextView
            android:id="@+id/txtOperator"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#f59d38"
            android:textSize="22dp"
            android:fontFamily="@font/fff2"/>
        <TextView
            android:id="@+id/txtSecondOperand"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:textColor="#f59d38"
            android:textSize="22dp"
            android:fontFamily="@font/fff2"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="-20dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp">
            <Button
                android:id="@+id/btnGoFirst"
                android:layout_marginLeft="50dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="#e9873c"
                android:textSize="20dp"
                android:fontFamily="@font/fff2"
                android:background="@drawable/setting" />
            <Button
                android:id="@+id/btnGoSecond"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="#e9873c"
                android:textSize="20dp"
                android:fontFamily="@font/fff2"
                android:background="@drawable/setting"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="88dp">
            <Button
                android:id="@+id/btnGoThird"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="#e9873c"
                android:textSize="20dp"
                android:fontFamily="@font/fff2"
                android:background="@drawable/setting" />
            <Button
                android:id="@+id/btnGoFourth"
                android:layout_marginLeft="20dp"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:textColor="#e9873c"
                android:textSize="20dp"
                android:fontFamily="@font/fff2"
                android:background="@drawable/setting"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout

        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="-100dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnGoReset"
            android:text="Reset"
            android:textColor="#f59d38"
            android:background="@drawable/setting"/>

    </LinearLayout>



    </LinearLayout>

